<Recipe>
	<Rules>
		<Rule>
			<Fragment>AlterProcedureStatement</Fragment>
			<TokenIndexMethod>ProcedureReference</TokenIndexMethod>
			<Action>Delete</Action>
		</Rule>
		<Rule>
			<Fragment>AlterProcedureStatement</Fragment>
			<TokenIndexMethod>Declare</TokenIndexMethod>
			<Action>AddDeclare</Action>
		</Rule>
		<Rule>
			<Fragment>AlterProcedureStatement</Fragment>
			<TokenIndexMethod>IndexAs</TokenIndexMethod>
			<Action>Delete</Action>
		</Rule>
		<Rule>
			<Fragment>AlterProcedureStatement</Fragment>
			<TokenIndexMethod>ExitProc</TokenIndexMethod>
			<Action>Delete</Action>
		</Rule>
		<Rule>
			<Fragment>CreateProcedureStatement</Fragment>
			<TokenIndexMethod></TokenIndexMethod>
			<Action>InsertDeclare</Action>
		</Rule>
		<Rule>
			<Fragment>InsertStatement</Fragment>
			<TokenIndexMethod></TokenIndexMethod>
			<Action>Delete</Action>
			<Comment>Replace all Client tables with Customer</Comment>
		</Rule>
		<Rule>
			<Fragment>InsertStatement</Fragment>
			<TokenIndexMethod></TokenIndexMethod>
			<Action>Count</Action>
			<Match>Client(\w+) </Match>
			<Format>There are {0} statements inserting into tables begging with Client</Format>
			<Comment>Count all inserts into tables beginning with Client </Comment>
		</Rule>
	</Rules>
</Recipe>
